/* miniprogram/pages/logistics/logistics.wxss */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.container{
  height: 100%;
  width: 100%;
  overflow: hidden;
  position: absolute;
  top: 0;
  bottom: 0;
  background-color: gainsboro;
}
.header{
  width: 100%;
  background-color: white;
}
.position{
  width: 94%;
  height: 56rpx;
  margin: 2% 3%;
  line-height: 56rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  background-color: gainsboro;
  font-size: 28rpx;
  color: white;
  border-radius: 10rpx;
}
/* 快递保证 */
.guarantee{
  width: 100%;
  padding: 0 2% 5% 2%;
  display:flex;
  justify-content: space-between;
  flex-direction: row;
}
.guaranteeItem{
  width:33%;
}
.guaranteeItem image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx
}
.guaranteeItem text{
  font-size:24rpx;
}

/* 商品导航 */
.goods{
  width: 100%;
  background-color: white;
}
.nav{
  width: 100%;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.nav-view_H{
  margin-top: 10rpx;
  width: 100%;
  height: 80rpx;
  white-space: nowrap;
}
.nav-view-item_H{
  margin-right:10rpx; 
  width: 100rpx;
  height: 60rpx;
  display: inline-block;
  margin: 10rpx 10rpx;
}
.nav-view-font{
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}
.selected{
  color: red;
  border-bottom: 2rpx solid red;
}
/* 商品 */
.goods-list{
  display: flex;
  flex-wrap: wrap;
}
.goods-info{
  width: 46%;
    margin: 2% 2% 0 2%;
  /* background-color: #ccc; */
}
.goods-title{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-weight: bold;
}
.goods-section{
  width: 100%;
}
.goods-img{
  width: 100%;
  height: 300rpx;
  text-align: center;
  position: relative;
  background-color: #ccc;
  border-radius: 10rpx;
}
.goods-img image{
  width: 60%;
  margin-top: 5%;
}
.goods-desc{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  background-color: yellowgreen;
  font-size: 28rpx;
  text-align: left;
  color: gold;
  padding-left: 20rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  position: absolute;
  bottom:0;
}
.goods-name{
  margin-top:10rpx; 
}
.goods-price{
  margin-top:10rpx;
  color: red;
}
.goods-add{
  width: 40rpx;
  height: 40rpx;
  background-color: red;
  color: white;
  border-radius: 50%;
  line-height: 35rpx;
  font-size: 40rpx;
  text-align: center;
  position: relative;
  left: 80%;
  bottom: 40rpx;  
}

/* 购物车 */
.btn{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 20px;
  bottom: 20px;
  border-radius: 50%;
  background-color: #666;
  text-align: center;
}

.btn image{
  width: 32px;
  height: 32px;
  margin-top: 8px;  
}