/* miniprogram/pages/home/home.wxss */
.container{
  width: 100%;
  padding: 20rpx;
}
.overflow{
  overflow: auto;
  zoom: 1;
}
.floatleft{
  float: left;
}
.floatright{
  float: right;
}
.header{
  width: 100%;
}
.header-left{
  width: 40%;
  margin:10rpx;
}
.user-head-img image{
  float: left;
  width: 80rpx;
  height: 80rpx;
  /* border: 2rpx solid black; */
  border-radius: 50%;
}
.user-head-info{
  float: left;
  margin-left: 10rpx;
}
.user-name{
  width: 200rpx;
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow:ellipsis; 
  overflow: hidden;
  margin-bottom: 8rpx;
}
.user-card{
  width: 80rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: center;
  color: #E9B52D;
  border:2rpx solid #E9B52D;
  border-radius: 40rpx;
}

.header-right{
  width: 40%;
}

.header-right-bg{
  width: 60%;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid red;
  border-radius: 40rpx;
  background-color: red;
  position: relative;
  left: 100rpx;
  top: 20rpx;
}

.header-right-text{
  font-size: 28rpx;
  line-height: 60rpx;
  color: white;
  text-align: center;
}
.header-right-img image{
  width: 40rpx;
  height: 40rpx;
  margin-right:30rpx; 
  margin-top: 10rpx;
}
/* 热门个商品左右滑动列表 */
.title{
  font-weight: bold;
  font-size: 32rpx;
  margin: 20rpx 0 0 10rpx;
}
.hot-view_H, .nav-view_H {
  width: 100%;
  white-space: nowrap;
}
.hot-view-item_H {
  width: 180rpx;
  height: 180rpx;
  display: inline-block;
  margin: 10rpx 20rpx;
}
.hot-view-image{
  width: 100%;
  height: 100%;
}
.hot-view-font{
  font-size: 28rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis; 
  margin-top: 20rpx;
}
/* 导航条左右滑动 */
.nav-view_H{
  margin-top: 20rpx;
}
.nav-view-item_H{
  margin-right:10rpx; 
  border: 2rpx solid #666;
  border-radius: 40rpx;
  width: 120rpx;
  height: 60rpx;
  display: inline-block;
  margin: 10rpx 10rpx;
}
.nav-view-font{
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}
