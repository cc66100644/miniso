/* miniprogram/pages/goods/goods.wxss */
/* 公共样式 */
.body{
  background-color: #999;
}
.red{
  color: red
}
.gray{
  color: #999;
}
.font-size{
  font-size:24rpx;
}
.font-blod{
  font-weight: bold;
}
.font-margin{
  margin-top: 4rpx;
}
/* 轮播图 */
.swiper-container{
  width: 100%;
}
swiper{
  width: 100%;
  height: 750rpx;
  margin-right: 2%; 
}

.slide-image{
  width: 750rpx;
  height: 750rpx;
}

/* 商品名称信息等 */
.goodsInfo{
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: white;
}
.goodsInfo-left{
  float: left;
  box-sizing: border-box;
  padding: 20rpx;
}
.goodsInfo-right{
  float:right;
  text-align: center;
  box-sizing: border-box;
  padding: 20rpx;
  border-left: 2rpx solid #999;
}
.goodsInfo-right .gray{
  border: 2rpx solid #999;
  border-radius: 20rpx;
}
/* 商品选择 */
.selectGoods{
  margin-top: 20rpx;
  background-color: white;
}
.mychoose{
  width: 100%;
  height: 160rpx;
  position: relative;
  margin-top: 20rpx;
}
.mychoose-img{
  position: absolute;
  left: 40rpx;
  bottom: 0;
}
.mychoose-img image{
  width: 160rpx;
}
.mychosse-text{
  margin-top: 100rpx;
  position: absolute;
  left: 220rpx;
  bottom: 0;
}
.chooselist{
  margin: 20rpx 40rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
}
.chooseitem{
  margin-right:20rpx;
  margin-top: 20rpx;
  padding: 10rpx;
}
.choose-gray{
  border: 2rpx solid #999;
  border-radius: 40rpx; 
  color: #999;
}
.choose-red{
 border: 2rpx solid red;
  border-radius: 40rpx; 
  color: red;
}