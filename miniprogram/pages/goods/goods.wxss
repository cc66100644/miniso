/* miniprogram/pages/goods/goods.wxss */
@import "../../dist/common/index.wxss";
/* 公共样式 */
.body{
  background-color: #eee;
}
.red{
  color: red
}
.gray{
  color: #999;
}
.font-size{
  font-size:24rpx;
}
.font-blod{
  font-weight: bold;
}
.font-margin{
  margin-top: 4rpx;
}
/* 轮播图 */
.swiper-container{
  width: 100%;
}
swiper{
  width: 100%;
  height: 750rpx;
  margin-right: 2%; 
}

.slide-image{
  width: 750rpx;
  height: 750rpx;
}

/* 商品名称信息等 */
.goodsInfo{
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: white;
}
.goodsInfo-left{
  float: left;
  box-sizing: border-box;
  padding: 20rpx;
}
.goodsInfo-right{
  float:right;
  text-align: center;
  box-sizing: border-box;
  padding: 20rpx;
  border-left: 2rpx solid #999;
}
.goodsInfo-right .gray{
  border: 2rpx solid #999;
  border-radius: 20rpx;
}
/* 商品选择 */
.selectGoods{
  margin-top: 20rpx;
  background-color: white;
}
.mychoose{
  width: 100%;
  height: 160rpx;
  position: relative;
  margin-top: 20rpx;
}
.mychoose-img{
  position: absolute;
  left: 40rpx;
  bottom: 0;
}
.mychoose-img image{
  width: 160rpx;
}
.mychosse-text{
  margin-top: 100rpx;
  position: absolute;
  left: 220rpx;
  bottom: 0;
}
.chooselist{
  margin: 20rpx 40rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
}
.chooseitem{
  margin-right:20rpx;
  margin-top: 20rpx;
  padding: 8rpx 20rpx 8rpx 10rpx;
  text-align: left;
}
.choose-gray{
  border: 2rpx solid #999;
  border-radius: 40rpx; 
  color: #999;
}
.choose-red{
 border: 2rpx solid red;
  border-radius: 40rpx; 
  color: red;
}
.amount{
  box-sizing: border-box;
  
}
/* 服务说明 */
.service{
  height: 50px;
  padding:10px 15px;
  display: flex;
  justify-content: space-between;
}
.serviceicon{
  margin-left: 5px;
  color: #999
}
.serviceul{
  width:250px;
  height: 60px;
  float:left; 
  display:flex;
  flex-wrap: wrap;
}
.serviceli{
  width:100px;
  height:30px;
}
.dot-margin{
  margin: 6px;
 
}
.dot{
  width: 8px;
  height: 8px;
  display: inline-block;
  border-radius:50%;
  background-color: red; 
}
/* 用户评论 */
.comment{
  margin-top: 20rpx;
  background-color: white;
}
.comment-content{
  padding:10px 15px;
}
.comment-content-head{
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-between;
}
.comment-user image{
  border-radius: 50%;
  vertical-align: bottom;
}
.comment-user text{
  margin-left: 10px;
}
.comment-time{
  line-height: 40px;
}
.comment-text{
  margin-top: 10px;
}
/* 商品参数 */
.parameter{
  background-color: white;
  margin-top: 10px;
}
.parameter-title{
  text-align: center;
  margin-top: 10px;
}
.black.van-cell__value{
  color: black;
  /* font-weight: bold; */
}
/* 售后说明 */
.aftersale{
  width: 100%;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 10px 15px;
  background-color: white;
}
.aftersale-title{
  text-align: center;
}
.aftersale-list{
  margin-top: 10px;
}
.aftersale-list-title{
  margin-left: 5px;
}
/* 大家都在买 */
.allbuy{
  background-color: white;
}
.allbuy-title{
  text-align: center;
  margin-bottom: 10px;
}
.goods{
  width: 98%;
  margin: 2% 1% 0 1%;
  /* background-color: #ccc; */
}
.goods-title{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-weight: bold;
}
.goods-section{
  width: 100%;
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
}
.goods-item{
  width: 46%;
  margin: 2%;
}
.goods-img{
  width: 100%;
  height: 300rpx;
  text-align: center;
  position: relative;
  background-color: #ccc;
  border-radius: 10rpx;
}
.goods-img image{
  width: 60%;
  margin-top: 5%;
}
.goods-desc{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  background-color: yellowgreen;
  font-size: 28rpx;
  text-align: left;
  color: gold;
  padding-left: 20rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  position: absolute;
  bottom:0;
}
.goods-name{
  margin-top:10rpx; 
}
.goods-price{
  margin-top:10rpx;
  color: red;
}

/* 底部 */
.van-goods-action{
  z-index: 999
}