<!--miniprogram/pages/shop/shop.wxml-->
<!-- 搜索栏+导航栏 -->
<view class="container">
  <view class="head">
    <view class="search">
      <image src="../../images/icon/search.png"></image>
      <text>名创优品自营</text>
    </view>
    <view class="nav">
      <scroll-view class="nav-view_H" scroll-x>
        <view wx:for="{{navName}}" class='nav-view-item_H {{selected[index] ?"selected":""}}' wx:key="navName" bindtap="click">
          <view class='nav-view-font' id="{{index}}">{{item}}</view>
        </view>
      </scroll-view>
    </view>
  </view>
  <view class="section">
    <view wx:for='{{selected}}' id="{{index}}" hidden="{{!selected[index]}}">

    <!-- 轮播图 -->
      <view class='swiper-container'>
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-color="{{indicatorcolor}}" indicator-active-color="{{indicatoractivecolor}}" bindchange='swiperChange' circular="{{circular}}">
          <block wx:for="{{imgUrls}}" wx:key="imgUrls">
            <swiper-item>
              <image src="{{item.src}}" mode='scaleToFill' class="slide-image" />
            </swiper-item>
          </block>
        </swiper>
      </view>
      <view wx:if='{{index == 0}}'>
        <view style="display:flex;justify-content: space-between">
          <view>
              <image src="../../images/icon/zan.png" style="width:32rpx;height:32rpx;"></image>
              <text>快递保证1</text>
          </view>
          <view>
              <image src="../../images/icon/zan.png" style="width:32rpx;height:32rpx;"></image>
              <text>快递保证2</text>
          </view> 
          <view>
              <image src="../../images/icon/zan.png" style="width:32rpx;height:32rpx;"></image>
              <text>快递保证3</text>
          </view>
        </view>
        <view>品牌甄选</view>
        <view>新品首发</view>
        <view>人气推荐</view>
      </view>
      <view>模板商品</view>
    </view>
  </view>
</view>