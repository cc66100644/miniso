/* miniprogram/pages/shop/shop.wxss */
.ellipsis{
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis; 
}
.container{
  width: 100%;
  height: 100%;
  /* padding: 0 10rpx; */
}
.head{
  width: 100%;
  height: 160rpx;
  /* background-color:red;  */
  position: fixed;
  top: 0;
  z-index: 99;
  background-color: white;
}
/* 搜索条 */
.search{
  width: 98%;
  height: 60rpx;
  margin-top: 10rpx;
  margin-left: 1%;
  background-color: #eee;
  border-radius: 40rpx;
  text-align: center;
  line-height: 60rpx;
}
.search image{
  width: 34rpx;
  height: 34rpx;
  vertical-align: text-bottom;
  margin-right: 10rpx;
}
.search text{
 color: #aaa;
}
/* 头部导航 */
.nav{
  width: 100%;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.nav-view_H{
  margin-top: 10rpx;
  width: 100%;
  height: 80rpx;
  white-space: nowrap;
}
.nav-view-item_H{
  margin-right:10rpx; 
  width: 100rpx;
  height: 60rpx;
  display: inline-block;
  margin: 10rpx 10rpx;
}
.nav-view-font{
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}
.selected{
  color: red;
  border-bottom: 2rpx solid red;
}
/* 内容 */
.section{
  position: relative;
  top: 160rpx;
  width: 100%;
  height: 100%;
}
/* 轮播图 */
.swiper-container{
  width: 100%;
}
swiper{
  width: 100%;
}
.slide-image{
  width: 750rpx;
  height: 100%;
  vertical-align: middle;
}
/* 快递保证 */
.guarantee{
  width: 100%;
  display:flex;
  justify-content: space-between;
  flex-direction: row;
}
.guaranteeItem{
  width:33%;
}
.guaranteeItem image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 20rpx
}
.guaranteeItem text{
  font-size:24rpx;
}
/* 品牌甄选 */
.bestGoods{
  width: 100%;
  margin-top:20rpx; 
}
.title-head{
  width: 100%;
  height: 60rpx;
  position: relative;
}
.title-head-left{
  position: absolute;
  left: 10rpx;
  bottom: 0;
  margin-left: 10rpx;
}
.title-head-right{
  font-size: 24rpx;
  color: #999;
  position: absolute;
  right: 10rpx;
  bottom: 0;
}
.bestGoods-section{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.bestGoodsItem{
  width: 48%;
  height: 220rpx;
  position: relative;
  margin: 1%;
  border-radius: 10rpx;
  overflow: auto;
  zoom: 1;
}
.bestGoodsItem-green{
  background-color: yellowgreen;
}
.bestGoodsItem-blue{
  background-color: skyblue;
}
.bestGoodsImg{
  position: absolute;
  right: 10rpx;
  top: 60rpx;
}
.bestGoodsImg image{
  width: 120rpx;
}
.bestGoodsText{
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  z-index: 2;
}
.bestGoodsName{
  width: 300rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 20rpx;
}
.bestGoodsPrice{
  font-size: 34rpx;
}
/* 新品首发 */
/* 左右滑动 */
.newGoods-view_H {
  width: 100%;
  white-space: nowrap;
  margin-top: 20rpx;
  display: flex;  
}
.newGoods-view-item_H {
  width: 180rpx;
  height: 360rpx;
  display: inline-block;
  margin: 10rpx 20rpx;
  vertical-align: top;
}
.newGoods-view-image{
  width: 100%;
  height: 100%;
}

.newGoods-view-name{
  font-size: 32rpx;
  text-align: left;
   margin-top: 20rpx;
}
.newGoods-view-des{
  font-size: 28rpx;
  text-align: left; 
  color: #999;
}
.newGoods-view-price{
  color: red;
}
.newGoods-more{
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  background-color: #ccc;
  text-align: center;
  line-height: 180rpx;
}
/* 人气推荐 */

.hotRecommend-section{
  width: 98%;
  height: 260rpx;
  margin: 1%
}
.hotRecommend-img{
  width: 240rpx;
  height: 240rpx;
  float: left;
  margin: 10rpx 0 0 10rpx;
}

.hotRecommend-img image{
  width: 98%;
}
.hotRecommend-text{
  float: left;
  vertical-align: middle;
  margin: 40rpx 0 0 50rpx;
}
.hotRecommend-name{
  font-size: 32rpx;
  text-align: left;
}
.hotRecommend-des{
  font-size: 28rpx;
  text-align: left; 
  color: #999;
  margin-top: 8rpx;
}
.hotRecommend-price{
 color: red;
 margin-top: 14rpx;
}
.goods{
  width: 98%;
  margin: 2% 1% 0 1%;
  /* background-color: #ccc; */
}
.goods-title{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-weight: bold;
}
.goods-section{
  width: 100%;
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
}
.goodsInfo{
  width: 46%;
  margin: 2%;
}
.goods-img{
  width: 100%;
  height: 300rpx;
  text-align: center;
  position: relative;
  background-color: #ccc;
  border-radius: 10rpx;
}
.goods-img image{
  width: 60%;
  margin-top: 5%;
}
.goods-desc{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  background-color: yellowgreen;
  font-size: 28rpx;
  text-align: left;
  color: gold;
  padding-left: 20rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  position: absolute;
  bottom:0;
}
.goods-name{
  margin-top:10rpx; 
}
.goods-price{
  margin-top:10rpx;
  color: red;
}
.banner{
  width: 100%;
}
.banner-image image{
  width: 100%;
  height: 300rpx;
}