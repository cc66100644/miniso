/* miniprogram/pages/shop/shop.wxss */
.container{
  width: 100%;
  height: 100%;
  /* padding: 0 10rpx; */
}
.head{
  width: 100%;
  height: 160rpx;
  /* background-color:red;  */
  position: fixed;
  top: 0;
  z-index: 99;
  background-color: white;
}
/* 搜索条 */
.search{
  width: 98%;
  height: 60rpx;
  margin-top: 10rpx;
  margin-left: 1%;
  background-color: #eee;
  border-radius: 40rpx;
  text-align: center;
  line-height: 60rpx;
}
.search image{
  width: 34rpx;
  height: 34rpx;
  vertical-align: text-bottom;
  margin-right: 10rpx;
}
.search text{
 color: #aaa;
}
/* 头部导航 */
.nav{
  width: 100%;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.nav-view_H{
  margin-top: 10rpx;
  width: 100%;
  height: 80rpx;
  white-space: nowrap;
}
.nav-view-item_H{
  margin-right:10rpx; 
  width: 100rpx;
  height: 60rpx;
  display: inline-block;
  margin: 10rpx 10rpx;
}
.nav-view-font{
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}
.selected{
  color: red;
  border-bottom: 2rpx solid red;
}
/* 内容 */
.section{
  position: relative;
  top: 160rpx;
  width: 100%;
  height: 100%;
}
/* 轮播图 */
.swiper-container{
  width: 100%;
  /* position: relative; */
}
swiper{
  width: 100%;
}
.slide-image{
  width: 750rpx;
  height: 100%;
  vertical-align: middle;
}
/* 快递保证 */
.guarantee{
  width: 100%;
  display:flex;
  justify-content: space-between;
  flex-direction: row;
}
.guaranteeItem{
  width:33%;
}
.guaranteeItem image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 20rpx
}
.guaranteeItem text{
  font-size:24rpx;
}
/* 品牌甄选 */
.bestGoods{
  width: 100%;
  margin-top:20rpx; 
}
.title-head{
  width: 100%;
  height: 60rpx;
  position: relative;
}
.title-head-left{
  position: absolute;
  left: 10rpx;
  bottom: 0;
  margin-left: 10rpx;
}
.title-head-right{
  font-size: 24rpx;
  color: #999;
  position: absolute;
  right: 10rpx;
  bottom: 0;
}
.bestGoods-section{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20rpx;
  /* flex-direction: column; */
}
.bestGoodsItem{
  width: 48%;
  height: 220rpx;
  position: relative;
  margin: 1%;
  border-radius: 10rpx;
  overflow: auto;
  zoom: 1;
}
.bestGoodsItem-green{
  background-color: yellowgreen;
}
.bestGoodsItem-blue{
  background-color: skyblue;
}
.bestGoodsImg{
  position: absolute;
  right: 10rpx;
  top: 60rpx;
}
.bestGoodsImg image{
  width: 120rpx;
}
.bestGoodsText{
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  z-index: 2;
}
.bestGoodsName{
  width: 300rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 20rpx;
}
.bestGoodsPrice{
  font-size: 34rpx;
}
/* 新品首发 */
/* 左右滑动 */
.hot-view_H, .nav-view_H {
  width: 100%;
  white-space: nowrap;
}
.hot-view-item_H {
  width: 180rpx;
  height: 180rpx;
  display: inline-block;
  margin: 10rpx 20rpx;
}
.hot-view-image{
  width: 100%;
  height: 100%;
}
.hot-view-font{
  font-size: 28rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis; 
  margin-top: 20rpx;
}