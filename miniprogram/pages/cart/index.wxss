/* miniprogram/pages/cart/index.wxss */
/* 商品条 */
.checkli{
  width: 100%;
  height: 120px;
  box-sizing: border-box;
  padding: 10px 15px;
  line-height: 120px;
  background-color: #fafafa
}
.checkli .van-checkbox__icon-wrap{
  box-sizing: border-box;
  padding-top: 40px;
}
.cancel{
  width: 65px;
  height: 120px;
  line-height: 120px;
  background-color: red;
  color: white;
  text-align: center;
}

.card-title{
  width: 170px;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.card-desc{
  width: 170px;
  height: 32rpx;
  margin-top: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.card-price{
  width: 170px;
  height: 32rpx;
  margin-top: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.stepper{
 position: absolute;
 right: 15px;
 bottom: 10px;
}
/* 订单条 */
.allchoose{
  margin-left: 10px;
}
.black{
  background-color: black;
}