/* component/home-header/home-header.wxss */
.overflow{
  overflow: auto;
  zoom: 1;
}
.floatleft{
  float: left;
}
.floatright{
  float: right;
}
.header{
  width: 100%;
}
.header-left{
  width: 40%;
  margin:10rpx;
}
.user-head-img image{
  float: left;
  width: 80rpx;
  height: 80rpx;
  /* border: 2rpx solid black; */
  border-radius: 50%;
}
.user-head-info{
  float: left;
  margin-left: 10rpx;
}
.user-name{
  width: 200rpx;
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow:ellipsis; 
  overflow: hidden;
  margin-bottom: 8rpx;
}
.user-card{
  width: 80rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: center;
  color: #E9B52D;
  border:2rpx solid #E9B52D;
  border-radius: 40rpx;
}
.header-right{
  width: 200rpx;
  height:60rpx;
  margin: 20rpx 20rpx 0 0;
}

.header-right-bg{
  width: 200rpx;
  height:60rpx;
  line-height: 60rpx;
  border: 2rpx solid red;
  border-radius: 40rpx;
  background-color: red;
  text-align: center;
}
.header-right-text{
  width: 100rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  color: white;
  margin-left: 30rpx;
}
.header-right-img{
  width: 38rpx;
  height: 38rpx;
  margin-right:40rpx; 
  margin-top: 8rpx;
}
.header-right-img image{
  width: 38rpx;
  height: 38rpx;
}
/* 弹出层 */
.pop-up{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 999; 
  display: flex;
  flex-direction: column; 
  align-items: center;
  justify-content: center;
}

.pop-up-container{
  width: 580rpx;
  height: 820rpx;
  background-color: #fff;
  border-radius: 8rpx;
  color: #666;
  font-size: 28rpx;
}

.pop-up-logo{
  width: 100rpx;
  height: 100rpx;
  /* height: 100rpx; */
  position: absolute;
  left: center;
  top: 100rpx;
  border: 10rpx solid white;
  border-radius: 50%;
  z-index: 9999; 
}
.logo{
  width: 110rpx;
  height: 120rpx;
  position: relative;
  top: -20rpx;
  left: -4rpx;
  /* z-index: 20; */
}
.yiweima{
  width:60%;
  position: relative;
  left: 20%;
  top: 15%;
}
.erweima{
  width:60%;
  position: relative;
  left: 20%;
  top: 20%;
}
.close{
  width: 48rpx;
  height: 48rpx;
  position: relative;
  left: 510rpx;
  bottom: 500rpx;
}
.color-white{
  color: white;
}